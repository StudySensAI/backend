{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",

    "outDir": "./dist",
    "rootDir": "./",

    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,

    "sourceMap": true,
    "noEmit": false
  },

  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
