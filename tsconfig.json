{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",

    "moduleResolution": "bundler",   // ⭐ REQUIRED for LangChain v0.3+
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "resolveJsonModule": true,
    "skipLibCheck": true,            // ⭐ Avoids .d.ts constraint errors

    "strict": true,
    "noEmit": true
  }
}
